# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.LoginController.getLogin
GET     /login                      controllers.LoginController.login
GET     /list                       controllers.UserController.list
GET     /listassign                 controllers.AssignmentController.list
GET     /listaward                  controllers.AwardController.list
GET     /listlang                   controllers.LanguageController.list
GET     /listprog                   controllers.ProgLanguageController.list
GET     /listassigid/:id               controllers.AssignmentController.listById(id:Int)
GET     /listawardid/:id               controllers.AwardController.listById(id:Int)
GET     /listlangid/:id               controllers.LanguageController.listById(id:Int)
GET     /listprogid/:id               controllers.ProgLanguageController.listById(id:Int)
GET     /listbyid/:id               controllers.UserController.listById(id:Int)
GET     /deleteaward/:id                controllers.AwardController.delete(id:Int)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file                    controllers.WebJarAssets.at(file)
